{{#post}}     
        <div class="post single">
                <h2><a href="{{url}}" title="{{{title}}}" >{{{title}}}</a></h2>
                <div class="meta">
                {{#if author.image}}
                <img class="author-thumb" src="{{author.image}}" alt="Author image" nopin="nopin" />
                <span style="display:none;">Author</span><a href="{{author.url}}" alt="{{{author.name}}}"> &nbsp;{{author}}</a> 
                {{#else}}
                    <i class="fa fa-user"></i><span style="display:none;">Author</span><a href="{{author.url}}" alt="{{{author.name}}}"> {{author}}</a> 
                {{/else}}
                {{/if}}
                &nbsp;&nbsp; <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}"><i class="fa fa-calendar"></i>  {{date format="DD MMMM YYYY"}}</time> 
                    {{#if tags}}
                    &nbsp;&nbsp;<i class="fa fa-tags"></i><span style="display:none;">Tags</span><span class="tag">&nbsp;#{{tags separator=" #"}}&nbsp;</span>
                    {{/if}}
                </div>
                
                
{{content}}
            <p class="share">Share To : &nbsp;&nbsp;&nbsp;<a class="facebook" href="https://www.facebook.com/sharer/sharer.php?u={{{title}}}{{@blog.url}}{{{url}}}" onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;"><i class="fa fa-facebook"></i>&nbsp; Facebook</a> &nbsp; <a class="twitter" href="http://twitter.com/share?text={{{title}}}&url={{@blog.url}}{{{url}}}" onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;"><i class="fa fa-twitter"></i>&nbsp; Twitter</a> &nbsp; <a class="google-plus" href="https://plus.google.com/share?url={{@blog.url}}{{{url}}}" onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;"><i class="fa fa-google-plus"></i>&nbsp; Google+</a> </p>  
            </div>
{{/post}}
        