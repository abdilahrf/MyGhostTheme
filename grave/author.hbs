{{!< default}}
<!-- Header -->
{{> header}}
<!-- End Header -->  

<!-- Author Detail -->
    {{#if author.cover}}       
        <div class="author-detail" style="background:url({{author.cover}});background-repeat:no-repeat;-webkit-background-size:cover;-moz-background-size: cover;-o-background-size: cover;background-size: cover;background-position:center;">
        <div class="author-overlay">
    {{else}}
        <div class="author-detail" style="background:#428BCA;">
    {{/if}}
    {{#if author.image}}
    <div class="author-container">
        <div style="width:100%;margin:15px 0;">
        <img class="author-img" src="{{author.image}}" alt="Author image" nopin="nopin"  />
        </div>
        <span style="display:none;">Author</span>
   All Post By <a href="{{author.url}}" alt="{{{author.name}}}">{{author}}</a> 
    {{else}}
        <i class="fa fa-user"></i><span style="display:none;">Author</span><a href="{{author.url}}" alt="{{{author.name}}}"> {{author}}</a> 
    {{/if}}    
    {{#if author.website}}
        <div class="author-website">    
        <i class="fa fa-globe"></i>&nbsp; <a href="{{author.website}}">{{author.website}}</a>
        </div>
    {{/if}}
        <p>{{author.bio}}</p>
    
    </div>
    {{#if author.cover}}
    </div>
    {{/if}}
</div>
<!-- End Author Detail -->

<!-- Content -->
{{> content}}
<!-- End Content -->

<!-- Footer -->
{{> footer}}
<!-- End Footer -->