	{{ghost_head}}
    
    
</head>
<body class="{{body_class}} home-template">

	<!-- Style Swicher -->
		<div id="style-switcher" style="right:-212px;">
			{{> switcher}}
		</div>
	<!-- ./Style Swicher -->
	
	
	<!-- Left Header -->
	{{#if @blog.cover}}
	<header id="kepriben-header" style="background-image:url({{@blog.cover}});background-repeat:no-repeat;-webkit-background-size:cover;-moz-background-size: cover;-o-background-size: cover;background-size: cover;background-position:center;" >
	{{else}}
	<header id="kepriben-header">
	{{/if}} 
	{{> header}}
	</header>
	<div id="kepriben-menu-toggle" class="icon-menu">Toggle menu</div>
	<!-- ./Left Header -->
	
	<div id="kepriben-content">
	{{{body}}}
	</div>
	
	{{> footer}}
	{{ghost_foot}}
	<script language="javascript" type="text/javascript">
	responsive_iframes();
	</script>		
</body>
</html>
