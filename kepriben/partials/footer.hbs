<script>
			// karena pake class maka returnnya Array
			var sl = document.getElementsByClassName("textbody");

var detek = document.getElementsByClassName('image-post'),
    total = detek.length,
    reg   = /<img.*src|<iframe.*src/gi; // silakan dimainkan RegEx-nya

(function() {
  var i = 0,
      text;
  for ( ; i < total; ++i ) {
    text = detek[i].innerHTML;
    if ( text.search(reg) == -1 ) {
      sl[i].style.display = 'block';
    }else{
      sl[i].style.display = 'none';
    }
  }
})();
	</script>
