                <div id="content" class="col-md-8">            
                <div class="content" >
                    <div class="breadcrumbs">
                    <i class="fa fa-home"></i> &nbsp;<a href="/">Home</a>
                    {{#if tags}}
                    &nbsp;&nbsp;/&nbsp;&nbsp;<a href="/tag/markup/">{{tags}}</a>
                    {{/if}}
                    </div>
                    {{#foreach posts}}
                <article id="9" class="{{post_class}}">
                    {{#if featured}}<div class="ribbon-featured"><i class="fa fa-star"></i></div>{{/if}}
                    <div class="post-head">
                        <h2 class="post-title"><a href="{{{url}}}">{{title}}</a></h2>
                        <div class="post-meta">
                                                            {{#author}}
                            <span class="author">By <a href="{{url}}">{{name}}</a></span> •
                                                            {{/author}}
                            <span class="date">{{date published_at timeago="true"}}</span> •
                            <span class="comment-count"><a href="#disqus_thread">0 Comment</a></span>
                        </div>
                    </div>
                        
                    <div class="featured-media">
                        {{^if image}}
                        {{content words="0"}} 
                        {{else}}
                        <img src="{{image}}" class="" alt="">
                        {{/if}}
                    </div>

                    <div class="post-content">
{{excerpt}}
                    </div>
                    
    <footer class="post-footer clearfix">
        <div class="pull-left tag-list">
            {{#if tags}}<i class="fa fa-tag"></i>&nbsp; {{tags separator=" , "}} {{/if}}
        </div>
        <div class="pull-right share">
            <ul class="share-icons">
                <!-- twitter -->
                <li><a href="https://twitter.com/share?text={{encode title}}&amp;url={{@blog.url}}{{{url}}}" onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;"><i class="fa fa-twitter"></i></a></li>
